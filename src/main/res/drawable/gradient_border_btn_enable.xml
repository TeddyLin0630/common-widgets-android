<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/button_radius" />
            <gradient
                android:angle="-45"
                android:endColor="#f49c00"
                android:startColor="#d28c9d" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/gradient_button_inner_padding"
        android:left="@dimen/gradient_button_inner_padding"
        android:right="@dimen/gradient_button_inner_padding"
        android:top="@dimen/gradient_button_inner_padding">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_inner_radius" />
            <solid android:color="#fff" />
        </shape>
    </item>
</layer-list>